<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.MaterialComponents">
        <item name="android:windowBackground">@color/colorPrimaryLessLight</item>
        <item name="android:textColor">@color/colorPrimaryGeyser</item>
        <item name="android:itemBackground">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:dialogPreferenceStyle">@style/DialogStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="MyHintStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
        <item name="boxStrokeColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Material.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDialogBackground</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
    </style>
</resources>
